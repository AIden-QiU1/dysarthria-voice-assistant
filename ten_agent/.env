# ========================================
# TEN Agent Environment Variables
# ========================================

# GLM-4 LLM Configuration
GLM_API_KEY=your-glm-api-key-here
GLM_MODEL=glm-4-flash

# CosyVoice TTS Configuration
DASHSCOPE_API_KEY=your-dashscope-api-key-here
COSY_VOICE_MODEL=cosyvoice-v1
COSY_VOICE_SAMPLE_RATE=16000

# FunASR Configuration
ASR_MODEL=SenseVoice-small
ASR_VAD_MODEL=fsmn-vad
ASR_PUNC_MODEL=ct-punc
ASR_DEVICE=cuda

# WebSocket Server Configuration
WEBSOCKET_PORT=8765
WEBSOCKET_HOST=0.0.0.0

# Backend Webhook Configuration
BACKEND_WEBHOOK_URL=http://localhost:3001/api/memory/add

# ========================================
# PowerMem Configuration
# ========================================

# OceanBase Database
DATABASE_PROVIDER=oceanbase
OCEANBASE_HOST=127.0.0.1
OCEANBASE_PORT=2881
OCEANBASE_USER=root
OCEANBASE_PASSWORD=root
OCEANBASE_DATABASE=voxflame
OCEANBASE_COLLECTION=memories

# PowerMem LLM Provider (for memory summarization)
LLM_PROVIDER=glm
LLM_API_KEY=your-glm-api-key-here
LLM_MODEL=glm-4-flash

# PowerMem Embedding Provider
EMBEDDING_PROVIDER=glm
EMBEDDING_API_KEY=your-glm-api-key-here
EMBEDDING_MODEL=embedding-3
EMBEDDING_DIMS=1536

# PowerMem Settings
ENABLE_MEMORIZATION=true
ENABLE_USER_MEMORY=true
MEMORY_SAVE_INTERVAL_TURNS=5
MEMORY_IDLE_TIMEOUT_SECONDS=30.0
